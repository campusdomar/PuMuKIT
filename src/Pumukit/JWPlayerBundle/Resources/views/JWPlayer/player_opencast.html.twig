{% extends 'PumukitJWPlayerBundle:JWPlayer:index.html.twig' %}
{% block body_base %}

  <div class="date" style="min-width: 1200px; margin-right: 10px;">
    {% if is_old_browser and not is_mobile_device %}
      <div style="margin-left: 20%; padding: 3px; font-size: 14px; font-weight: bold; text-align: center; color: #FFF; background-color: #D80000; float:left">
        <img id="imagen_alert" src="{{ asset('bundles/pumukitwebtv/images/obsolete.png') }}" style="float: left; margin-right: 3px;"></img>
        <span>
          {% trans %}Use{% endtrans %}&nbsp<a href="https://www.google.com/intl/es/chrome/browser/?hl=es" target="_blank" style="color: #FFF;">Google Chrome</a>&nbsp{% trans %}or{% endtrans %}&nbsp<a href="http://www.apple.com/es/safari/" target="_blank" style="color: #FFF;">Safari</a>&nbsp{% trans %}to improve your experience in watching recorded lectures{% endtrans %}
        </span>
        <div>({% trans %}Web explorers with HTML5 and h.264 codec video support{% endtrans %})</div>
      </div>
    {% endif %}
  </div>
  <div style="clear:both"></div>

  <div id="pumukit_m_mmobj" class="pumukit_m">
    {% if not multimediaObject.getProperty('opencasthide') %}
      {% if multimediaObject.getProperty('opencast') is not empty %}
        <iframe src="{{ iframeurl(multimediaObject, not is_old_browser, true) }}"
                id="mh_iframe"
                style="border:0px #FFFFFF none; width:100%; height:950px;"
                name="Opencast Matterhorn - Media Player"
                scrolling="no" frameborder="0" marginheight="0px" marginwidth="0px"
                webkitallowfullscreen="true" mozallowfullscreen="true" allowfullscreen="true"
                >
        </iframe>
      {% endif %}
    {% endif %}
  </div>

  <script language="JavaScript">
   function blink_uno() {
       document.getElementById('imagen_alert').style.visibility='visible';
       setTimeout('blink_dos()',1000);
   }
   function blink_dos() {
       document.getElementById('imagen_alert').style.visibility='hidden';
       setTimeout('blink_uno()',1000);
   }
  </script>
{% endblock %}
