{% extends 'PumukitWebTVBundle::layout.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('bundles/pumukitjwplayer/css/general.css') }}" type="text/css" rel="stylesheet" media="screen"/>
{% endblock %}

{% block javascripts %}
    {% set absolute = "/pumoodle/embed" == app.request.pathInfo ? true : false %}
    {% if absolute %}
        <script src="{{ absolute_url('bundles/pumukitjwplayer/js/jwplayer/jwplayer.js') }}" type="text/javascript"></script>
    {% else %}
        <script src="{{ asset('bundles/pumukitjwplayer/js/jwplayer/jwplayer.js') }}" type="text/javascript"></script>
    {% endif %}
    {% if jwplayer_key is defined %}
        <script type="text/javascript">jwplayer.key = "{{ jwplayer_key }}";</script>
    {% endif %}
{% endblock %}

{% block title %}{{ parent() }} - {{ object.title }}{% endblock %}
{% block keywords %}{{ parent() }} - {{ object.keyword }}{% endblock %}

{% block body_base %}
{% endblock %}
