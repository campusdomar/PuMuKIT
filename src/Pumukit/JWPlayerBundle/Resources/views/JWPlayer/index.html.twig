{% extends 'PumukitWebTVBundle::layout.html.twig' %}

{% block stylesheets %}
<style>
body { margin: 0; padding: 0; }
</style>
{% endblock %}

{% block javascripts %}
  {% set absolute = "/pumoodle/embed" == app.request.pathInfo ? true : false%}
  <script src="{{ asset('bundles/pumukitjwplayer/js/jwplayer/jwplayer.js', absolute=absolute) }}" type="text/javascript"></script>
  {% if jwplayer_key is defined %}<script type="text/javascript">jwplayer.key="{{ jwplayer_key }}";</script>{% endif %}
{% endblock%}

{% block title %}{{ parent() }} - {{ object.title }}{% endblock %}
{% block keywords %}{{ parent() }} - {{ object.keyword }}{% endblock %}

{% block body_base %}
{% endblock %}
