.series_image_group {
    position:relative;
}


.hover_series {
    position: absolute;
    width: 50%;
    right:0;
    text-align: center;
    background-color: black;
    height: 100%;
    top: 0;
    opacity: 0.7;
}

.hover_series .text-center {
    height:100%;
}

@media (min-width: 1600px) {
    .hover_series i {
        color: white;
        margin-top:15%;
        opacity: 1;
        font-size: 4rem;
    }

    .hover_series .series_count_mmobj {
        display:block;
        color: white;
        font-size: 3rem;
        opacity: 1;
    }

    .hover_series .series_count_text {
        color: white;
        font-size: 2rem;
        opacity: 1;
    }
}

