<!-- Serie multimedia -->
{% set col_mapper = {'1': 'col-md-12', '2': 'col-md-6', '3': 'col-md-4', '4': 'col-md-3'} %}
{% set col_class = ( col_mapper[cols|default('1')] | default(col_mapper['1'] ) ) %}
<div class="{{ col_class }}">
    <a href="{{ path('pumukit_webtv_series_index', {'id': object.id}) }}">
        <div class=" pumukit_mmobj">
            <figure class="pumukit_album">
                <div class="thumbnail thumbnailo">
                    <span class="number-videos serial">
                        {# KEEPING BACKWARDS COMPATIBILITY #}
                        {% if num_mmobjs is not defined %}
                            {% set num_mmobjs = count_published_mmobjs(object.id) %}
                        {% endif %}
                        {# NOTE: These 'videos' field is not internationalized. TODO #}
                        {{ num_mmobjs }} {{ num_mmobjs > 1 ? 'videos' : 'video' }}
                    </span>
                    <div class="thumbnailholder"></div>
                    <img class="thumbnailimg" src="{{ object|first_url_pic(true) }}" alt="thumbnailimg"/>
                </div>
                <div class="thumbnail thumbnailo">
                    <div class="thumbnailholder"></div>
                    <img class="thumbnailimg" src="{{ object|first_url_pic(true) }}" alt="thumbnailimg"/>
                </div>
                <div class="thumbnail thumbnailo">
                    <div class="thumbnailholder"></div>
                    <img class="thumbnailimg" src="{{ object|first_url_pic(true) }}" alt="thumbnailimg"/>
                </div>
            </figure>
            <div class="info-wrapper">
                <div class="info serial">
                    <div class="title">
                        {{ object.title | default('No title'|trans) }}
                    </div>
                    <div class="subtitle">
                        <abbr title="{{ object.title }}">
                            {{ object.line2 }}
                        </abbr>
                    </div>
                </div>
                <div class="date serial">
                    {{ object.publicDate|date("d/m/Y") }}
                </div>
            </div>
        </div>
    </a>
</div>
