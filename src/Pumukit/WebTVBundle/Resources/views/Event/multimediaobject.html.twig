{% set col_mapper = {'1': 'col-md-12', '2': 'col-md-6', '3': 'col-md-4', '4': 'col-md-3'} %}
{% set col_class = ( col_mapper[cols|default('1')] | default(col_mapper['1'] ) ) %}

<div class="{{ col_class }}">
    <a href="{{ path('pumukit_live_id', {'id': event['multimediaObjectId']}) }}">
        <div class="pumukit_mmobj">
            <div class="thumbnail">
                <img alt="serial_pic" class="serial thumbnailimg" src="{{ event|first_url_pic(true) }}"/>
                <div class="thumbnailholder"></div>
            </div>
            <div class="info-wrapper">
                <div class="info">
                    <div class="title" title="{{ event['event']['name'][app.request.getLocale()] }}">
                        <span class="mmobj_thumbnail_title">{{ event['event']['name'][app.request.getLocale()] | default('No title')|trans }}</span>
                    </div>
                    <div class="date mmobj">
                        {{ event['event']['description'][app.request.getLocale()] }} <br />
                        {% if next_event_session(event['event']) != '' %}
                            {% trans %}Starts {% endtrans %}:
                            {{ next_event_session(event['event'])|date("d/m/Y") }}
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </a>
</div>
