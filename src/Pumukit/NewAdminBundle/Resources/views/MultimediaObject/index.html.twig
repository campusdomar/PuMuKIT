window.update_preview_mms = function(id) {
  var route = "{{ path('pumukitnewadmin_mms_show', {id: '__id__'}) }}";
  $.ajax({
          url: route.replace('__id__', id),
          type: 'POST',
          success: function(response){$('#preview').html(response);}
