<div class="col-md-9">

    <div class="row">

        <div class="col-xs-12 col-md-4">
            <label for="id" class="col-md-3 control-label">{% trans %}ID{% endtrans %}</label>
            <div class="col-md-9">
                <input id="id" type="text" class="form-control" name="criteria[id]"
                       placeholder="{% trans %}Multimedia object ID{% endtrans %}"
                       {% if criteria %}value="{{ criteria['id'] }}"{% endif %}
                />
            </div>
        </div>

        <div class="col-xs-12 col-md-4">
            <label for="seriesID" class="col-md-3 control-label">{% trans %}Series{% endtrans %}</label>
            <div class="col-md-9">
                <input id="seriesID" type="text" class="form-control" name="criteria[seriesID]"
                       placeholder="{% trans %}Series ID{% endtrans %}"
                       {% if criteria %}value="{{ criteria['seriesID'] }}"{% endif %}
                />
            </div>
        </div>

        <div class="col-xs-12 col-md-4">
            <label for="text" class="col-md-3 control-label">{% trans %}Text{% endtrans %}</label>
            <div class="col-md-9">
                <input id="text" type="text" class="form-control" name="criteria[text]"
                       placeholder="{% trans %}Search by title, subtitle or description{% endtrans %}"
                       {% if criteria %}value="{{ criteria['text'] }}"{% endif %}
                />
            </div>
        </div>
    </div>

    <div class="row">

        <div class="col-xs-12 col-md-4">
            <label for="type" class="col-md-3 control-label">{% trans %}Type{% endtrans %}</label>
            <div class="col-md-9">
                <select id="type" name="criteria[type]" class="form-control">
                    <option value="all">{% trans %}All{% endtrans %}</option>
                    {% for key, value in type %}
                        <option value="{{ key }}" {% if criteria and  key == criteria['type'] %}selected{% endif %}>{{ value }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <div class="col-xs-12 col-md-4">
            <label for="duration" class="col-md-3 control-label">{% trans %}Duration{% endtrans %}</label>
            <div class="col-md-9">
                <select id="duration" name="criteria[duration]" class="form-control">
                    <option value="">{% trans%}All{% endtrans %}</option>
                    <option value="-5" {% if criteria and "-5" == criteria['duration'] %}selected{% endif %}>{% trans %}Up to 5 minutes{% endtrans %}</option>
                    <option value="-10" {% if criteria and "-10" == criteria['duration'] %}selected{% endif %}>{% trans %}Up to 10 minutes{% endtrans %}</option>
                    <option value="-30" {% if criteria and "-30" == criteria['duration'] %}selected{% endif %}>{% trans %}Up to 30 minutes{% endtrans %}</option>
                    <option value="-60" {% if criteria and "-60" == criteria['duration'] %}selected{% endif %}>{% trans %}Up to 60 minutes{% endtrans %}</option>
                    <option value="+60" {% if criteria and "+60" == criteria['duration'] %}selected{% endif %}>{% trans %}More than 60 minutes{% endtrans %}</option>
                </select>
            </div>
        </div>

        <div class="col-xs-12 col-md-4">
            <label for="year" class="col-md-3 control-label">{% trans %}Year{% endtrans %}</label>
            <div class="col-md-9">
                <select id="year" name="criteria[year]" class="form-control">
                    <option value="">{% trans%}Any{% endtrans %}</option>
                    {% for year in years %}
                        <option value="{{year}}" {% if criteria and year == criteria['year'] %}selected{% endif %}>{{year}}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>

    {% if genre is defined and genre is not empty %}
        <div class="row">
            <div class="col-xs-12 col-md-4">
                <label for="type" class="col-md-3 control-label">{% trans %}Genre{% endtrans %}</label>
                <div class="col-md-9">
                    <select id="genre" name="criteria[genre]" class="form-control">
                        <option value="all">{% trans %}All{% endtrans %}</option>
                        {% for key, value in genre %}
                            <option value="{{ key }}" {% if criteria and key == criteria['genre'] %}selected{% endif %}>{{ value }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
    {% endif %}

</div>

<div class="col-xs-12 col-md-3">
    <input id="submitBasicForm" class="btn btn-pumukit btn-raised" type="submit" value="{% trans %}Send{% endtrans %}" />
    <button class="btn btn-default btn-raised pull-left" data-toggle="collapse" href="#collapseAdvanceForm" aria-expanded="false" aria-controls="collapseExample">{% trans %}Advanced{% endtrans %}</button>
</div>
