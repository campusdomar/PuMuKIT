###> php-fpm ###
PHP_UPLOAD_TMP_DIR=/tmp
PHP_MEMORY_LIMIT=512M
PHP_UPLOAD_MAX_FILESIZE=10G
PHP_DEFAULT_LOCALE=es
PHP_DEFAULT_CHARSET="URF-8"
